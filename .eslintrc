{
  "extends": [
    "airbnb"
  ],
  "plugins": [
    "react",
    "typescript",
    "react-hooks",
    "@typescript-eslint"
  ],
  "env": {
    "jest": true,
    "browser": true
  },
  "parser": "@typescript-eslint/parser",
  "rules": {
    "import/no-unresolved": "off",
    "import/extensions": [
      "error",
      {
        "ts": "never",
        "tsx": "never",
        "json": "never"
      }
    ],
    "react/function-component-definition": [
      "error",
      {
        "namedComponents": "arrow-function"
      }
    ],
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [
          ".jsx",
          ".tsx"
        ]
      }
    ]
  }
}